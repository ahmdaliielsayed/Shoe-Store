<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_2</item>
        <item name="android:textColorHint">@color/athens_gray2</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/padding_16</item>
        <item name="boxCornerRadiusBottomStart">@dimen/padding_16</item>
        <item name="boxCornerRadiusTopEnd">@dimen/padding_16</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="boxCornerRadiusTopStart">@dimen/padding_16</item>
        <item name="boxStrokeWidth">@dimen/padding_2</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="textLightStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textSize">@dimen/padding_s_16</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Button" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Material3.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="enforceTextAppearance">false</item>
        <item name="android:maxWidth">@dimen/padding_320</item>
        <item name="android:paddingLeft">@dimen/padding_12</item>
        <item name="android:paddingRight">@dimen/padding_12</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
        <item name="android:insetTop">@dimen/padding_4</item>
        <item name="android:insetBottom">@dimen/padding_4</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Button</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:paddingLeft">@dimen/padding_24</item>
        <item name="android:paddingRight">@dimen/padding_24</item>
        <item name="strokeWidth">@dimen/padding_1</item>
    </style>

    <style name="textBoldStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/padding_s_16</item>
    </style>

    <style name="textRegularStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textSize">@dimen/padding_s_16</item>
    </style>

    <style name="textMediumStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textSize">@dimen/padding_s_12</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/padding_s_12</item>
        <item name="android:background">@drawable/et_shape</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:inputType">text</item>
    </style>
</resources>
