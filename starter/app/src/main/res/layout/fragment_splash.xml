<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >

    <data>
        <variable
            name="splash_fragment"
            type="com.udacity.shoestore.ui.splash.SplashFragment" />
